{
  "name": "hal-escape-room",
  "version": "1.0.0",
  "description": "This project is a proof of concept for an API-based escape room game. The core idea is to create an interactive experience where players must explore and solve puzzles solely through a discoverable API, without any traditional user interface.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build",
    "start": "nohup node dist/index.js > app.log 2>&1 & echo $! > app.pid",
    "stop": "kill $(cat app.pid) && rm app.pid",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csabadaniel/hal-escape-room.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/csabadaniel/hal-escape-room/issues"
  },
  "homepage": "https://github.com/csabadaniel/hal-escape-room#readme",
  "dependencies": {
    "@poppanator/http-constants": "^3.0.0",
    "basic-auth": "^2.0.1",
    "express": "^5.2.1",
    "halson": "^3.1.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.8",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "vitest": "^4.0.16"
  }
}
